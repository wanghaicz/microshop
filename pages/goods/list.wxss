.content .list {
    display: flex;
    flex-direction: column;
    justify-content: flex-star;
    width: 100%;
    margin-bottom: 6px;
    margin-top: 2px;
}

.content .list .item-row {
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: flex-star;
}

.content .list .item-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-star;
    text-align: center;
}

.content .list .item-column:nth-child(1) {
    padding: 4px 2px 0px 4px;
}

.content .list .item-column:nth-child(2) {
    padding: 4px 4px 0px 2px;
}

.content .list .item-column text.active {
    background: #fff;
    width: 100%;
    height: 100px;
    line-height: 100px;
    font-size: 1.2em;
    overflow: hidden;
}