/**app.wxss**/
page {
	min-height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	background: #f0eff5;
}

.container {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	color: #373737;
}
.topbar {
	display: flex;
	justify-content: flex-start;
	width: 100%;
	height: 40px;
	background: #f9f9f9;
}

/*.topbar .logo {
    width: 40px;
    height: 40px;
    margin-left : 4px;
}*/

.topbar text {
	display:inline-block;
	width: 100%;
	height:40px;
	line-height: 40px;
	text-align: center;
}

.topbar .search {
	height: 28px;
	width: 100%;
	border: none;
	background: #d4d9dc;
	float: right;
	margin: 6px 4px;
	border-radius: 5px;
	padding-left: 5px;
}

.topbar .search-placeholder {
	text-align: center;
	color: #a1a1a3;
}

.content {
	width: 100%;
}